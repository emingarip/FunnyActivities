{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=funnyactivities;Username=postgres;Password=devpassword"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Elasticsearch",
      "Serilog.Sinks.Seq",
      "Serilog.Filters.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting": "Information",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "FunnyActivities.WebAPI.Controllers.AuthController": "Information",
        "FunnyActivities.WebAPI.Middleware.RequestResponseLoggingMiddleware": "Information",
        "FunnyActivities.CrossCuttingConcerns.Logging": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/health' or RequestPath like '/metrics'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "SourceContext = 'Microsoft.AspNetCore.StaticFiles.StaticFileMiddleware'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "Level = 'Debug' and SourceContext not like 'FunnyActivities.%'"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "FunnyActivities.WebAPI",
      "Version": "1.0.0"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}> {CorrelationId}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/error-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error",
          "filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "Level >= 3"
              }
            }
          ]
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "funnyactivities-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv8",
          "emitEventFailure": "WriteToSelfLog",
          "batchPostingLimit": 50,
          "period": 5,
          "inlineFields": true,
          "restrictedToMinimumLevel": "Information"
        },
        "filter": [
          {
            "Name": "ByExcluding",
            "Args": {
              "expression": "SourceContext like 'Microsoft.%' and Level < 3"
            }
          }
        ]
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "apiKey": "your-api-key-here",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "Console"
          },
          {
            "Name": "File"
          }
        ]
      }
    }
  },
  "AllowedHosts": "*",
  "SendGrid": {
    "ApiKey": "your_sendgrid_api_key_here"
  },
  "Twilio": {
    "AccountSid": "your_twilio_account_sid_here",
    "AuthToken": "your_twilio_auth_token_here",
    "FromNumber": "+1234567890"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyHereThatIsAtLeast32CharactersLongForSecurity",
    "Issuer": "FunnyActivities",
    "Audience": "FunnyActivitiesUsers",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "post:/api/users/login",
        "Period": "5m",
        "Limit": 5
      },
      {
        "Endpoint": "post:/api/users/register",
        "Period": "1h",
        "Limit": 3
      }
    ]
  },
  "MinIO": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin123",
    "UseSSL": false,
    "Region": "us-east-1"
  },
  "FileUpload": {
    "DefaultBucket": "material-photos",
    "MaxFileSize": 10485760,
    "MaxFilesPerUpload": 10,
    "AllowedFileTypes": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/webp"
    ],
    "EnableFileProcessing": true,
    "EnableVirusScanning": false,
    "TempDirectory": "temp/uploads",
    "PreSignedUrlExpirySeconds": 3600,
    "FileTypeConfigurations": {
      "image": {
        "Name": "Image Files",
        "AllowedContentTypes": [
          "image/jpeg",
          "image/png",
          "image/gif",
          "image/webp"
        ],
        "AllowedExtensions": [
          ".jpg",
          ".jpeg",
          ".png",
          ".gif",
          ".webp"
        ],
        "MaxFileSize": 10485760,
        "MinFileSize": 1024,
        "EnableProcessing": true,
        "EnableThumbnail": true,
        "ThumbnailWidth": 200,
        "ThumbnailHeight": 200,
        "EnableCompression": true,
        "CompressionQuality": 80,
        "DefaultBucket": "material-photos",
        "RequireAuthentication": true,
        "AllowedRoles": [
          "Admin",
          "User"
        ]
      }
    },
    "BucketConfigurations": {
      "material-photos": {
        "Name": "material-photos",
        "Region": "us-east-1",
        "EnableVersioning": false,
        "EnableEncryption": false,
        "MaxBucketSize": -1,
        "MaxObjects": -1,
        "AllowedFileTypes": [
          "image/jpeg",
          "image/png",
          "image/gif",
          "image/webp"
        ],
        "IsPublic": false,
        "LifecyclePolicy": "",
        "Tags": {
          "Purpose": "Material Photos",
          "Environment": "Development"
        }
      },
      "profile-images": {
        "Name": "profile-images",
        "Region": "us-east-1",
        "EnableVersioning": false,
        "EnableEncryption": false,
        "MaxBucketSize": -1,
        "MaxObjects": -1,
        "AllowedFileTypes": [
          "image/jpeg",
          "image/png",
          "image/gif",
          "image/webp"
        ],
        "IsPublic": false,
        "LifecyclePolicy": "",
        "Tags": {
          "Purpose": "Profile Images",
          "Environment": "Development"
        }
      }
    }
  }
}
